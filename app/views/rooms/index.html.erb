
<div class="container">


    <div class="d-flex justify-content-center flex-wrap">
      <h1>Checkout our rooms</h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
      <% @rooms.each do |room| %>
        <%= link_to room_path(room) do %>
          <div class="card m-4" style="width: 18rem;">
            <img src="https://fakeimg.pl/286x214" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-title"><%= room.hotel.name %></p>
              <h4> only <%= number_to_euros(room.price_per_night.to_i / 100) %></h4>
              <p> for <%= room.capacity %> people</p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>



</div>

<%# "#{room.hotel.name} - room for #{room.capacity} people, that costs #{number_to_euros(room.price_per_night.to_i / 100)} per night" %>
